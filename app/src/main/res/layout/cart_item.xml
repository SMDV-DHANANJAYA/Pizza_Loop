<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/singleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/card_background">

        <ImageView
            android:id="@+id/pizzaImage"
            android:layout_width="90dp"
            android:layout_height="89dp" />

        <TextView
            android:id="@+id/pizzaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-light"
            android:layout_marginLeft="8dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/pizzaImage"
            android:layout_toRightOf="@+id/pizzaImage"
            android:maxLines="1"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pizzaName"
            android:layout_marginStart="15dp"
            android:layout_alignStart="@+id/pizzaName"
            android:layout_alignLeft="@+id/pizzaName"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/pizzaPriceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Rs:"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pizzaPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pizzaQuantityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pizzaPrice"
                android:fontFamily="sans-serif-medium"
                android:text="Quantity:"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pizzaQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pizzaPrice"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/totalPriceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pizzaQuantity"
                android:fontFamily="sans-serif-medium"
                android:text="Total Price:"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pizzaQuantity"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:textSize="12sp" />

        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_below="@+id/singleRow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

</RelativeLayout>